// Online C compiler to run C program online
#include <stdio.h>

int main() {
    
    int r;
    printf("enter here = ");
    scanf("%d",&r);
    // Write C code here
  for(int i=0;i<=r;i++)
  {
      for(int j=i;j<=r;j++)
      {
          printf(" ");
      }
      for(int k=0;k<=i;k++)
      {
          printf("*");
          printf(" ");
      }
      
      printf("\n");
  }
    for(int i=r-1;i>=0;i--)
  {
      for(int j=i;j<=r;j++)
      {
          printf(" ");
      }
      for(int k=0;k<=i;k++)
      {
          printf("* ");
      }
      
      printf("\n");
  }


    return 0;
}
